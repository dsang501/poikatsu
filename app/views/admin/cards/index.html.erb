<% provide(:title, "カード一覧") %>
<h2 class="head-line title_h2 text-center admin_card_index">カード一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <%= link_to new_admin_card_path, data: {"turbolinks" => false}, class: "btn btn-warning pull-right new_card" do %>
    <i class="fas fa-plus"></i>
    新規カード登録
    <% end %>
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
				<% @cards.each do |card| %>
  				<tr>
            <td class="info col-xs-1">
              <%= card.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_card_path(card), class: "btn-link" do %>
                <%= card.name %>
              <% end %>
            </td>
            
            




          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <div class="text-center"><%= paginate(@cards) %></div>
</div>
