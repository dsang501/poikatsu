<% provide(:title, "カード一覧") %>
<h2 class="head-line text-center">カード一覧</h2>
<div class="row">
  <div class="col-xs-12">
    <table class="text-center admin-card-index" frame="border">
		  <div class="field">
        <tr>
          <th>ID</th>
          <th>カード名</th>
        </tr>

				<% @cards.each do |card| %>
  				<tr>
            <td class="col-xs-1">
              <%= card.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_card_path(card), class: "btn-link" do %>
                <%= card.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </div>
    </table>
  </div>
  <div class="new-card">
    <%= link_to new_admin_card_path, data: {"turbolinks" => false}, class: "btn btn-warning pull-top" do %>
      カードを追加
    <% end %>
  </div>
</div>
