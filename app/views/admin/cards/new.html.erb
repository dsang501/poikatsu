<h1>New card</h1>

<% provide(:title, "商品新規登録") %>

<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">カード新規登録</h2>
    <%= form_for(@card, url: admin_cards_path, method: :post, class: "form-horizontal") do |f| %>
      <%= render "form_card", f: f %>
      
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
        </div>
  	      <%= f.attachment_field :image, class: "image" %>
      </div>
      <div class="col-xs-6">
        
        <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>

        <div>
          <%= link_to "Back to cards", admin_cards_path %>
        </div>

      </div>
    <% end %>
  </div>
</div>