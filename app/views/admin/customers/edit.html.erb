<% provide(:title, "詳細情報編集") %>
<h2 class="head-line title_h2 text-center">
  <%= full_name(@customer) %>さんの詳細情報編集
</h2>
<div class="row">
  <div class="col-xs-offset-2 col-xs-10">
    <%= render "layouts/error_messages", resource: @customer %>
    
    <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>

      <div class="form-group col-xs-12">
        <%= f.label :id, "ID", class: "col-sm-3 control-label" %>
        <%= f.label :"#{@customer.id}" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"氏名", class: "col-sm-3 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
        <%= f.text_field :last_name, class: "col-sm-3 form-control-static name" %>
        <%= f.label :"(名)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-12">
        <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :kana_last_name, class: "col-sm-3 form-control-static name" %>
        <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :kana_first_name, class: "col-sm-3 form-control-static name" %>
      </div>

        <%= render "form_mail", f: f %>

      <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
          <%= f.radio_button :is_valid, true %>
          <%= f.label :is_valid, "退会済", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_valid, false %>
          <%= f.label :is_valid, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
      <div class="actions  col-xs-9 col-xs-offset-4">
        <%= f.submit '変更を保存する' ,class: "btn btn-danger" %>
      </div>
  <% end %>
  <div class="col-xs-12">
      <%= link_to "＜ 戻る",   admin_customer_path, class: "back-page" %>
    </div>
  </div>
</div>
