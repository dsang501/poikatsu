<% provide(:title, "会員一覧") %>
  <h2 class="head-line title_h2 text-center">
    <%= full_name(@customer) %>さんの会員詳細
  </h2>
  <div class="row">
    <div class="col-xs-8">
      <div class="field">
        <p>
          顧客ID     <%= @customer.id %>
          <% if @customer.is_valid == true %>
            <span> <i class="fas fa-bullseye blue"></i>退会済
          <% elsif @customer.is_valid == false %>
             <i class="fas fa-bullseye red"></i>有効会員</span>
          <% end %>
        </p>
      </div>
      <div class="field">
        <p>
          氏名      <%= full_name(@customer) %>
        </p>
      </div>
      <div class="field">
        <p>
          フリガナ    <%= kana_full_name(@customer) %>
        </p>
      </div>
      <div class="field">
        <p>
          メールアドレス <%= @customer.email%>
        </p>
      </div>

      <div class="actions">
        <%= link_to "編集する",edit_admin_customer_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@customer.id}" %>
      </div>
    </div>
  </div>