<% provide(:title, "管理者ログイン") %>
<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">管理者ログイン</h2>

    <div class="col-xs-10 admin-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "layouts/error_messages", resource: resource %>
        <%= render "session", f: f %>
    </div>

  <div class="actions col-xs-9">
    <%= f.submit " ログイン ", class: "col-xs-8 btn btn-info pull-right btn-lg" %>
  </div>
<% end %>
  </div>
</div>
