<h1>New card</h1>

<%= render "form_card", card: @card %>

<br>

<div>
  <%= link_to "Back to cards", cards_path %>
</div>

<% provide(:title, "商品新規登録") %>

<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center">カード新規登録</h2>
    <%= form_for(@card, url: cards_path, method: :post, class: "form-horizontal") do |f| %>
      
      <div class="col-xs-4 col-xs-offset-1">
        <div class="img_field">
        </div>
  	      <%= f.attachment_field :image, class: "image" %>
      </div>
      <div class="col-xs-6">
        
        <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
        </div>

      </div>
    <% end %>
  </div>
</div>