<section class="section">
  <article class="media">
    <div class="media-content">
      <div class="content has-text-centered">
      </div>
      <div class="columns is-centered">
        <div class="column is-5">
          <br>
          <%= link_to "ログイン", new_customer_session_path, class: "btn btn-info" %>
          <br>
          <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-success" %>
          <br>
         </div>
      </div>
    </div>
  </article>

  <br>
  <div class="columns is-centered">
    <div class="column">
      <figure>
        <div class="main-image"></div>
      </figure>
    </div>
  </div>
</section>

<div class="text-center">
<img src="/assets/css.webp" class="rounded float-start" alt="画像" width="150px" height="150px">
</div>

<% provide(:title, "カード一覧") %>
<h2 class="head-line title_h2 text-center admin_card_index">カード一覧</h2>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
        </tr>
      </thead>
      <tbody>
				<% @cards.each do |card| %>
  				<tr>
            <td class="info col-xs-1">
              <%= card.id %>
            </td>
            <td class="text-left">
              <%= link_to card_path(card), class: "btn-link" do %>
                <%= card.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>
